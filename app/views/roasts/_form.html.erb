
<%= simple_form_for @roast, url: roasts_path do |f| %>
    <%= f.error_notification %>
    <%= f.input :date %>
    <%= f.input :beans %>
    <%= f.input :s_weight, :label => "Start Weight:"%>
    <%= f.input :f_weight, :label => "Finish Weight:"%>
    <%= f.input :air_temp %>
    <%= f.input :roaster %>
    <%= f.input :drop_temp %>
    <%= f.input :turn_point %>
    <%= f.input :f_crack_s, :label => "First crack start:" %>
    <%= f.input :f_crack_e, :label => "First crack end:" %>
    <%= f.input :end_temp %>
    <%= f.input :end_heat %>
    <%= f.input :total_time %>
    <%= f.input :cooling_time %>
    <%= f.input :roast_notes %>

    <%= f.button :submit, class: "btn-primary" %>
    <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
  <% end %>