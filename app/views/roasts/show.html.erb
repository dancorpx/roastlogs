<div class="container">
  <div class="row">
    <div class="col-md-6">
        <h1>Batch #<%= @roast.id %></h1> 
        <%= link_to 'Edit', edit_roast_path(@roast), class: 'btn btn-warning' %>
        <br/>
        <br/>
        <div class="table-responsive-md">
          <table class="table table-bordered">
            <thead>
              <th>Roast date:</th>
              <th>Beans:</th>
              <th>Start weight:</th>
              <th>Finish weight:</th>
              <th>Air temperature:</th>
              <th>First crack start:</th>
              <th>First crack finish:</th>
              <th>Second crack start:</th>
              <th>Second crack finish:</th>
              <th>Total time:</th>
              <th>Cooling time:</th>
              <th>Roasting Notes:</th>
            </thead>
            <tbody>
              <tr>
                <td><%= @roast.date %></td>
                <td><%= @roast.beans %></td>
                <td><%= @roast.s_weight %></td>
                <td><%= @roast.f_weight %></td>
                <td><%= @roast.air_temp %></td>
                <td><%= @roast.f_crack_s %></td>
                <td><%= @roast.f_crack_e %></td>
                <td><%= @roast.s_crack_s %></td>
                <td><%= @roast.s_crack_e %></td>
                <td><%= @roast.total_time %></td>
                <td><%= @roast.cooling_time %></td>
                <td><%= @roast.roast_notes %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
  </div>  
  <br/>
  <br/>
  <center><h3>Tasting Comments</h3></center>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <% @comments.each do |comment| %>
      <div>
        <strong><%= comment.user_name %></strong>
        <br>
        <p><%= comment.body %></p>
        <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>
     </div>
    <% end %>
    <%= render partial: 'comments/form', locals: { comment: @comment } %>
    </div>
  </div>
</div>
  <br/>
  <br/>