<div class="container">
  <div class="row">
    <div class="col-md-6">
        <h1>Batch #<%= @roast.id %></h1> 
        <%= link_to 'Edit', edit_roast_path(@roast), class: 'btn btn-warning' %>
        <br/>
        <br/>
        <div class="table-responsive-md">
          <table class="table table-bordered">
            <thead>
              <th>Batch Date:</th>
              <th>Roaster:</th>
              <th>Beans:</th>
              <th>Start Weight:</th>
              <th>Finish Weight:</th>
              <th>Air Temp:</th>
              <th>Charge Temp:</th>
              <th>Turning Point:</th>
              <th>First crack:</th>
              <th>Dev Time:</th>
              <th>End Temp:</th>
              <th>End Heat:</th>
              <th>Total Time:</th>
              <th>Roasting Notes:</th>
            </thead>
            <tbody>
              <tr>
                <td><%= @roast.date %></td>
                <td><%= @roast.roaster %></td>
                <td><%= @roast.beans %></td>
                <td><%= @roast.s_weight %></td>
                <td><%= @roast.f_weight %></td>
                <td><%= @roast.air_temp %></td>
                <td><%= @roast.drop_temp %></td>
                <td><%= @roast.turn_point %></td>
                <td><%= @roast.f_crack_s %></td>
                <td><%= @roast.roast_dev %></td>
                <td><%= @roast.end_temp %></td>
                <td><%= @roast.end_heat %></td>
                <td><%= @roast.total_time %></td>
                <td><%= @roast.roast_notes %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
  </div>  
  <br/>
  <br/>
  <center><h3>Tasting Comments</h3></center>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <% @comments.each do |comment| %>
      <div>
        <strong><%= comment.user_name %></strong>
        <br>
        <p><%= comment.body %></p>
        <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>
     </div>
    <% end %>
    <%= render partial: 'comments/form', locals: { comment: @comment } %>
    </div>
  </div>
</div>
  <br/>
  <br/>