      <div class="col-md-3">
      <%= link_to french_press_path do %>
        <div class="card">
          <img src="https://raw.githubusercontent.com/dancorpx/roastlogs/master/app/assets/images/french.png" class="card-img-top" style="height: 15rem;">
          <div class="card-body">
