<%= simple_form_for (@item) do |f| %>
    <%= f.error_notification %>
    <%= f.input :title %>
    <%= f.input :link %>
    <%= f.input :content %>  
    <%= f.input :user_id, :input_html => {:value => current_user.id}, :as => :hidden %>
    <%= f.button :submit, class: "btn-primary" %>
    
<% end %>
